<body>
	<!-- Nav -->

	<nav>

		<div id="nav-brand">
			<div class="nav-brand--group">
				<img class="avatar tooltip" src="/media/avatar.jpg" alt="Avatar" data-tooltip="Hi There! ðŸ‘‹">
				<h1 class="nav-brand-name">Sound<wbr>Selections</h1>
			</div>
		</div>
		<div id="nav-search">
			<input type="text" id="search" placeholder="Search for names or styles...">
		</div>
		<div id="nav-counter">
			<span id="playlist-counter"></span>
			<a id="reset-button" style="display: none;">Clear Results</a>
		</div>

	</nav>

	<!-- Main -->
	<main>

		<div id="loading-message" class="label secondary">
			<p class="label secondary">Loading... Sometimes this can take a while - still learning to code!</p>
		</div>

		<section id="playlists-container">
			<!-- Playlists will be added via JavaScript -->
		</section>
	</main>

	<!-- Footer -->

	<footer>
		<div id="nav-desc">
			<div class="nav-brand--group">
				<p class="nav-brand-desc">Curated Playlists by <a href="https://linktr.ee/barryprendergast"
