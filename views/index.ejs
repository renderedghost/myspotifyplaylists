	<link rel="stylesheet" href="/css/global.css">
	<link rel="stylesheet" href="/css/typography.css">
	<link rel="stylesheet" href="/css/layout.css">
	<link rel="stylesheet" href="/css/component.css">

</head>

<body class="flex lay--gap lay--column">

	<nav class="flex lay--justify-center">

		<div class="flex lay--column lay--gap width-control">

			<div class="flex lay--row lay--gap-small lay--align-center">
				<img class="avatar tooltip" src="/media/avatar.jpg" alt="Avatar"
					data-tooltip="Welcome! I hope you find your new favourite thing ðŸ‘‹">
				<h1 class="text-name-site">Sound<wbr>Selections</h1>
			</div>

			<div id="nav-search" class="flex">
				<input type="text" id="search" placeholder="Find your favourite style...">
			</div>

			<div class="flex lay--row lay--gap-small lay--align-center">
				<span id="playlist-counter"></span>
				<a id="reset-button" style="display: none;">Clear Results</a>
			</div>

		</div>

	</nav>

	<main class="flex lay--justify-center">

		<div class="width-control">

			<div id="loading-message" class="flex">
				<p class="label secondary">Loading... Sometimes this can take a while - still learning to code!</p>
			</div>

			<section id="playlists-container" class="grid lay--gap-large-xx">
				<!-- Playlists will be added via JavaScript -->
			</section>

		</div>

	</main>

	<footer class="flex lay--justify-center">
		<div class="flex lay--row lay--gap width-control">

			<div class="flex lay--row lay--gap-small lay--align-center">
				<a class="button" href="https://open.spotify.com/user/111112791" target="_blank">View on Spotify</a>
			</div>

			<div class="flex lay--row lay--gap-small lay--align-center">
				<p>Weekly curated playlists by <a href="https://linktr.ee/barryprendergast" target="_blank">Beere</a>
					since 2019 &copy;</p>
			</div>

		</div>

	</footer>

	<div id="overlay-background" class="overlay hidden">

		<div id="overlay" class="overlay-content lay--column">

			<div id="close-overlay" class="close-overlay"><span>&times;</span></div>

			<div class="flex lay--column lay--gap lay--justify-left">
				<h2 id="overlay-playlist-title" class="primary"></h2>

				<div class="flex lay--row lay--gap-small-x lay--justify-left">
					<p id="overlay-playlist-tracks" class="label secondary"></p>
					<p id="overlay-playlist-divider" class="label secondary">&#124;</p>
					<p id="overlay-playlist-followers" class="label secondary"></p>
				</div>

				<p id="overlay-playlist-description" class="label mid clamp-2"></p>

				<div class="flex lay--row lay--gap lay--justify-left">
					<a id="open-web" class="button" data-playlist-id="">Open in Spotify Web</a>
					<a id="copy-url" class="button">Copy Link</a>
				</div>

				<div class="overlay-player-wrapper">
					<iframe id="spotify-player" src="" allowtransparency="true" allowfullscreen
						allow="clipboard-write; encrypted-media; fullscreen; picture-in-picture;"></iframe>
				</div>

			</div>

		</div>

	</div>

	<div id="tooltip" class="tooltip-container"></div>

	<script src="/js/app.js"></script>

</body>

